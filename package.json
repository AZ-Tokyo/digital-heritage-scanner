{
  "name": "digital-heritage-scanner",
  "version": "1.2.3",
  "type": "module",
  "scripts": {
    "dev": "vite --config config/vite.config.ts",
    "build": "vite build --config config/vite.config.ts && node scripts/copy-assets.mjs",
    "test": "vitest --config config/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config config/vitest.config.ts",
    "lint": "eslint src --config config/eslint.config.js --ext .ts,.tsx",
    "format": "prettier --write .",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@digital-go-jp/tailwind-theme-plugin": "^0.3.2",
    "@eslint/js": "^9.39.2",
    "@types/chrome": "^0.0.287",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.0.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.53.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.9"
  }
}