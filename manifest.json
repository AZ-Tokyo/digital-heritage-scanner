{
    "manifest_version": 3,
    "name": "Digital Heritage Scanner",
    "version": "1.3.1",
    "description": "デジタル遺産候補をスキャンしてCSV出力",
    "permissions": [
        "bookmarks",
        "history",
        "cookies",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "pages/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "side_panel": {
        "default_path": "pages/sidepanel.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}